<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="calculator_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle" >bold</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="calculator_style.button_style_land">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/my_buttons_color</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">@dimen/text_on_buttons</item>
        <item name="android:layout_marginStart">@dimen/main_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_button_margin</item>
    </style>

    <style name="calculator_style.textview_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/display_height</item>
        <item name="android:paddingTop">@dimen/main_button_margin</item>
        <item name="android:paddingBottom">@dimen/display_text_padding</item>
        <item name="android:paddingLeft">@dimen/display_text_padding</item>
        <item name="android:paddingRight">@dimen/display_dubble_text_padding</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/text_on_buttons</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:strokeColor">@color/black</item>
    </style>
</resources>